#!/bin/tcsh
#29/11/18 - TK
#This script extracts the van der Waals (vdW) scores of the structures generated by HADDOCK in a HADDOCK run result.
#This process is iterated over each HADDOCK run output folder in a given directory.

foreach i(BINDKIN*)
	cd $i/structures/it1/water
	foreach j(*.pdb)
		grep energies $j | awk '{print $8}' | sed 's/,//g' >> vdw
		echo $j >> pdblist
		paste pdblist vdw | awk '{print $1,$2}' > valVDW
	end
	cd ../../../../
end
