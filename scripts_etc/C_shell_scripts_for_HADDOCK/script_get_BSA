#!/bin/tcsh
#29/11/18 - TK
#This script extracts the buried surface area (BSA) scores of the structures generated by HADDOCK.
#This process is iterated over each HADDOCK run output folder in a given directory.

foreach i(BINDKIN*)
	cd $i/structures/it1/water
	foreach j(*.pdb)
		grep uried $j | awk '{print $5}' >> bsa
		echo $j >> pdblist
		paste pdblist bsa | awk '{print $1,$2}' > valBSA
	end
	cd ../../../../
end
